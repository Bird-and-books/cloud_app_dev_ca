version: 2.1

workflows:
  version: 2
  build:
    jobs:
      - build:
          filters:
            branches:
              only:
                - main
      - deploy:
          filters:
            branches:
              only:
                - main
          requires:
            - build

jobs:
    build:
        working_directory: ~/CA/Articles
        docker: 
            - image: circleci/ruby:2.7.4-node-browsers
        steps:
            - checkout
            - run:
                    name: update-bundler
                    command: 'gem install bundler:2.2.28'
            - restore_cache:
                    key: dependency-cache-{{ checksum "Gemfile.lock" }}
            - run:
                    name: install-gems
                    command: bundle install --jobs=4 --retry=3 --path vendor/bundle
            - save_cache:
                    key: dependency-cache-{{ checksum "Gemfile.lock" }}
                    paths:
                        - vendor/bundle
    start_backend:
        working_directory: ~/CA/Articles
        docker:
            - image: circleci/ruby:2.7.4-node-browsers
        steps:
            - checkout
            - run:
                    name: start-backend
                    command: |
                        bundle exec rails db:create
                        bundle exec rails db:migrate
                        bundle exec rails server --binding 0.0.0.0 -p 4000
    start_client:
        working_directory: ~/CA/Articles/articles_react
        docker:
            - image: circleci/node:14.17.6
        steps:
            - checkout
            - run:
                    name: install-client-dependencies
                    command: npm install
            - run:
                    name: start-client
                    command: npm start

            - run:
                    name: run-tests
                    command: |
                            cd ~/CA/Articles
                            bundle exec rspec
            - run:
                    name: run-client-tests
                    command: |
                            cd ~/CA/Articles/articles_react
                            npm test
      - restore_cache:
          key: dependency-cache-{{ checksum "package-lock.json" }}
      - run:
          name: install-npm-wee
          command: npm install
      - save_cache:
          key: dependency-cache-{{ checksum "package-lock.json" }}
          paths:             - ./node_modules    

  deploy:
    docker:
      - image: circleci/node:10.16.3
    steps:
      - run:
          name: deploy-application
          command:  ssh -o StrictHostKeyChecking=no $EC2_USERNAME@$EC2_PUBLIC_DNS "export SERVER=\"$SERVER\"; export PRIVATE_KEY=\"$PRIVATE_KEY\"; rm -rf  SimpleApplication/; git clone https://github.com/Bird-and-books/cloud_app_dev_ca.git; source CA/deploy.sh"

      